<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th><i class="fa-solid fa-user"></i> Full name</th>
      <th><i class="fa-solid fa-square-phone"></i> Phone</th>
      <th><i class="fa-solid fa-square-envelope"></i> Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.full_name %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td><%= link_to 'Show', customer, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path, class: "btn btn-primary" %>
